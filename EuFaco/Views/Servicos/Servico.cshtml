@{
    ViewBag.Title = "Serviço";
    Layout = null;
}

@section scripts{
    <script>
        function candidatar() {
            candidatura = {
                IdServico: @Model.Id,
                Mensagem: $("#txtMensagem").val()
            }
            $.ajax({
                url: '/Servicos/Candidatar',
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(candidatura),
                success: function (result) {
                    alert("Candidatura realizada com sucesso! :)");
                }
            });
        }
    </script>
}

@using EuFaco.DataAccess.Models
@model Servico

<div class="container be-detail-container">
    <div class="row">
        <div class="col-xs-12 col-md-3 left-feild">
            <div class="be-vidget back-block">
                <a class="btn full color-1 size-1 hover-1"><i class="fa fa-chevron-left"></i>voltar ao perfil</a>
            </div>
            <div class="be-vidget hidden-xs hidden-sm" id="scrollspy">
                <h3 class="letf-menu-article">
                    Choose Category
                </h3>
                <div class="creative_filds_block">
                    <ul class="ul nav">
                        <li><a href="blog-detail-2.htmlbasic-information">Basic Information</a></li>
                        <li><a href="blog-detail-2.htmledit-password">Edit Password</a></li>
                        <li><a href="blog-detail-2.htmlon-the-web">On The Web</a></li>
                        <li><a href="blog-detail-2.htmlabout-me">About Me</a></li>
                        <li><a href="blog-detail-2.htmlweb-references">Web References</a></li>
                    </ul>
                </div>
                <a class="btn full color-1 size-1 hover-1" onclick="candidatar();">Candidatar-se</a>
            </div>

        </div>
        <div class="col-xs-12 col-md-9 _editor-content_">
            <div class="affix-block" id="basic-information">
                <div class="be-large-post">
                    <div class="info-block style-2">
                        <div class="be-large-post-align"><h3 class="info-block-label">Serviço publicado por @Model.Solicitante.Nome</h3></div>
                    </div>
                    <div class="be-large-post-align">
                        <div class="row">
                            <div id="divTitulo" class="input-col col-xs-12">
                                <div class="form-group focus-2">
                                    <div class="form-label">@Model.Titulo</div>
                                </div>
                            </div>
                            <div class="input-col col-xs-12">
                                <div class="form-group focus-2">
                                    <div class="form-label">@Model.Descricao</div>
                                </div>
                            </div>
                            <div class="input-col col-xs-12">
                                <div class="form-group focus-2">
                                    <div class="form-label">Mensagem para o publicador do serviço</div>
                                    <textarea class="form-input" id="txtMensagem" name="txtDescricao" required=""></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>