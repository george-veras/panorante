<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    @RenderSection("metas", required: false)

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @RenderSection("styles", required: false);

    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Codinome Eu Faço</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/Perfil/UsuarioProfissional">Perfil</a></li>
                    <li><a href="/Mensagens">Minhas Mensagens</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Perguntas à Comunidade<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Perguntas/PesquisarPerguntas">Pesquise as Perguntas</a></li>
                            <li><a href="/Perguntas/PerguntarComunidade">Pergunte à Comunidade</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Serviços<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Servicos/PesquisarServicos">Pesquisar Serviços</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Publicações<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Publicacoes/PublicarImagem">Publicar Imagem</a></li>
                            <li><a href="/Publicacoes/PublicarAntesDepois">Publicar Antes & Depois</a></li>
                            <li><a href="/Publicacoes/PublicarProjeto">Publicar Projeto</a></li>
                        </ul>
                    </li>
                    <li><a href="#">Chat</a></li>
                    <li><a href="/Perfil/Sair">Sair</a></li>
                </ul>
            </div>
            <!--/.navbar-collapse -->
        </div>
    </nav>

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <img src="~/Images/banner4.jpg" class="img-responsive" alt="Responsive image" style="width: 100%; height: 100%">
    </div>

    <div class="container">
        @RenderBody()
        <footer>
            <p>&copy; 2015 Company, Inc.</p>
        </footer>
    </div>
    <!-- /container -->

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/jquery-2.2.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
